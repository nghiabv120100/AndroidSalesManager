<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.client.PersonalInfoFrag">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/person"
        android:layout_gravity="center"
        android:layout_marginTop="45sp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        />
    <TextView
        android:id="@+id/txtFullName"
        android:textStyle="bold"
        android:textSize="23dp"
        android:text="Bùi Văn Nghĩa"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20sp"
        android:background="#D3D1D0"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:id="@+id/txtChangePersonalInformation"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:text="Thay đổi thông tin cá nhân."
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#D3D1D0"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <TextView
        android:id="@+id/txtPurchaseHistory"
        android:textSize="23dp"
        android:textColor="@color/black"
        android:text="Lịch sử mua hàng."
        android:layout_marginVertical="10dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="#D3D1D0"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <Button
        android:id="@+id/btnLogout"
        android:text="Đăng xuất"
        android:layout_marginTop="25sp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>